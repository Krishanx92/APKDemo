{
  "openapi": "3.0.1",
  "info": {
    "title": "Taxi Booking API",
    "version": "1.0.0",
    "description": "API for taxi booking"
  },
  "servers": [
    {
      "url": "http://booking-service:81"
    }
  ],
  "paths": {
    "/bookings": {
      "get": {
        "summary": "Get all taxi bookings",
        "tags": [
          "Taxi Booking"
        ],
        "parameters": [
          {
            "name": "id",
            "in": "query",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "A list of taxi bookings",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Booking"
                  }
                }
              }
            }
          }
        }
      },
      "post": {
        "summary": "Create a new taxi booking",
        "tags": [
          "Taxi Booking"
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/Booking"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "default response",
            "content": {
              "*/*": {
                "schema": {
                  "$ref": "#/components/schemas/Booking"
                }
              }
            }
          }
        }
      }
    },
    "/bookings/{id}": {
      "put": {
        "tags": [
          "Taxi Booking"
        ],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "integer",
              "format": "int32"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "default response",
            "content": {
              "*/*": {
                "schema": {
                  "$ref": "#/components/schemas/Booking"
                }
              }
            }
          }
        }
      },
      "delete": {
        "tags": [
          "Taxi Booking"
        ],
        "operationId": "deleteEmployee",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "integer",
              "format": "int32"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "default response",
            "content": {
              "*/*": {
                "schema": {
                  "$ref": "#/components/schemas/Booking"
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "Booking": {
        "type": "object",
        "properties": {
          "passenger_name": {
            "type": "string"
          },
          "destination": {
            "type": "string"
          },
          "pickup_time": {
            "type": "string",
            "format": "date-time"
          }
        }
      }
    }
  }
}
